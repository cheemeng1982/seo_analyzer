                        //Export ignore image
                        "mColumns": [1, 2, 3]
                    },
                    {
                        "mColumns": "visible",
                        "sExtends": "print",
                        "sMessage": "Generated by SEOAnalyzer <i>(press Esc to close)</i>"
                    }
                ],
                "sSwfPath": "/Scripts/merchant/plugin/datatables/swf/copy_csv_xls_pdf.swf"
